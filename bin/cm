#!/usr/bin/perl
use strict;
use warnings;

=head1 USEAGE

cm My/Module.pm My::Module::Helper ...

=cut


$|++;
system( q{/usr/local/bin/cpanm},
        qw{--skip-installed}, 
        qw{--sudo}, 
        map { s/\.pm$//; s/\//::/g; $_; } @ARGV  # take paths (My/Module.pm) or modules (My::Module), convert to module format
      );

